{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "DOM"],
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["node_modules"]
}
